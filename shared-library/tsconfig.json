{
  "compilerOptions": {
    "diagnostics": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom",
      "es2019"
    ],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ],
  "main": "index.js"
}
